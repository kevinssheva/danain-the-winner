// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  INVESTOR
  FOUNDER
}

model User {
  id String @id @default(uuid()) @db.Uuid
  fullName String
  email String @unique
  password String
  role UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}